@import "tailwindcss";

/* êšIh@7 */
:root {
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;
  
  color-scheme: light;
  color: rgba(17, 24, 39, 0.87); /* gray-900 with opacity */
  background-color: #f9fafb; /* gray-50 */

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-text-size-adjust: 100%;
}

body {
  margin: 0;
  display: flex;
  place-items: center;
  min-width: 320px;
  min-height: 100vh;
  background: linear-gradient(135deg, #fef2f2 0%, #fef7ff 100%);
}

#root {
  width: 100%;
  max-width: 1280px;
  margin: 0 auto;
  padding: 2rem;
  text-align: center;
}

/* ¢;˜øs„êšI7 */
.red-packet-gradient {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
}

.red-packet-shadow {
  box-shadow: 0 4px 20px rgba(220, 38, 38, 0.3);
}

.gold-gradient {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

/* ¨;Hœ */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-2px); }
  20%, 40%, 60%, 80% { transform: translateX(2px); }
}

.shake {
  animation: shake 0.5s ease-in-out;
}

@keyframes bounce-in {
  0% {
    opacity: 0;
    transform: scale(0.3) translateY(50px);
  }
  50% {
    opacity: 1;
    transform: scale(1.05) translateY(-5px);
  }
  70% {
    transform: scale(0.9) translateY(0);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.bounce-in {
  animation: bounce-in 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* ¢aGyH */
.red-packet-card {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform-style: preserve-3d;
}

.red-packet-card:hover {
  transform: translateY(-4px) scale(1.02);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1), 0 8px 16px rgba(220, 38, 38, 0.2);
}

.red-packet-card.claimed {
  opacity: 0.8;
  filter: grayscale(20%);
}

/*  }¨; */
.loading-skeleton {
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: loading-shimmer 1.5s infinite;
}

@keyframes loading-shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* û¨ï */
@media (max-width: 640px) {
  #root {
    padding: 1rem;
  }
  
  .red-packet-card:hover {
    transform: translateY(-2px) scale(1.01);
  }
}

/* ñr!/ */
@media (prefers-color-scheme: dark) {
  :root {
    color: rgba(255, 255, 255, 0.87);
    background-color: #1f2937;
  }
  
  body {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
  }
}